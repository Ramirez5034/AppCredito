<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A30000"> <!-- Fondo rojo oscuro -->

    <!-- Título centrado con color blanco -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carrito De Compras"
        android:textSize="34sp"
        android:textColor="#FFFFFF" /> <!-- Blanco para resaltar -->

    <!-- Botones para navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver a menú"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnRegresarConsulta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnDisminuirCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disminuir"
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEliminarProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar Producto"
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnVaciarCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vaciar Todo"
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- ListView para mostrar los productos en el carrito -->
    <ListView
        android:id="@+id/listViewCarrito"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#D71A58"
        android:dividerHeight="1dp"
        android:background="#0B0909"/>

    <!-- Total -->
    <TextView
        android:id="@+id/textTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:padding="16dp" />

    <!-- Botones de productos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnProducto1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Consola GameCube."
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
        android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnProducto2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nintendo Switch."
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnProducto3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PlayStation 5"
            android:backgroundTint="#560202"
            android:textColor="#FFFFFF"
            android:layout_weight="1" /> <!-- Se asigna un peso igual a cada botón -->
    </LinearLayout>



</LinearLayout>
