<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E0909"> <!-- Color de fondo -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Espacio decorativo entre título y subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="20sp"
            android:textColor="#00F682A4"
            android:layout_marginBottom="8dp"/>


        <!-- Título en negrita y centrado -->

        <!-- Espacio decorativo entre título y subtítulo -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Inicio de consulta"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="15sp"
            android:textColor="#00F682A4"
            android:layout_marginBottom="8dp"/>

        <!-- Espacio decorativo entre título y subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="15sp"
            android:textColor="#00F682A4"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="El credito que dispone es de:"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1,300"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El próximo pago sera el:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/11/2024"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La fecha de corte sera:"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/11/2024"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se encuentran pagos vencidos."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingBottom="16dp"/>


        <!-- Botones de navegación -->
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:text="Regresar a menú"
            android:textColor="#FF0303" />

        <Button
            android:id="@+id/btnCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7C0202"
            android:text="Ir de compras"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSolicitarCredito"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#7C0202"
            android:text="Solicitar Crédito"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
